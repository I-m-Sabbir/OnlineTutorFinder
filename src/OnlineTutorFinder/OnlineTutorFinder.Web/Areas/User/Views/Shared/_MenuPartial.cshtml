
<nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
        with font-awesome or any other icon font library -->
        @if (UserBaseModel.Menu != null && UserBaseModel.Menu.Count > 0)
        {
            foreach (var item in UserBaseModel.Menu)
            {
                if (item.HasChild)
                {
                    <li class="nav-item has-treeview menu-open border-bottom">
                        <a href="#" class="nav-link text-dark">
                            <i class="nav-icon @item.Icon"></i>
                            <p>
                                <span class="brand-text font-weight-bold">@item.Name</span>
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            @foreach (var child in item.ChildItems!)
                            {
                                <li class="nav-item border-bottom">
                                    <a href="@child.Link" class="nav-link text-dark">
                                        <i class="@child.Icon"></i>
                                        <span class="brand-text font-weight-bold">@child.Name</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item border-bottom">
                        <a href="@item.Link" class="nav-link">
                            <h5 class="text-dark">
                                <i class="@item.Icon"></i>
                                <span class="brand-text font-weight-bold">@item.Name</span>
                            </h5>
                        </a>
                    </li>
                }
            }
        }
    </ul>
</nav>

