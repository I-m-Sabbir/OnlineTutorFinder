@model PostModel
@{
    ViewData["Title"] = "RequestEnroll";
}
<div class="container">
    <div class="card bg-gradient">
        <div class="card-header"><h3 class="text-center"><u>Request For Enroll</u></h3></div>
        @if (Model.ScheduleId != Guid.Empty)
        {
            <div class="card-body d-flex justify-content-center pl-5 pr-5">
                <table class="table table-sm table-borderless table-responsive">
                    <thead>
                        <tr><th colspan="3" class="text-danger bg-gradient-yellow p-2">Confirm Your Selected Subject and Schedule</th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>Subject</th>
                            <td> : </td>
                            <td>@Model.SubjectName</td>
                        </tr>
                        <tr>
                            <th>Start Time</th>
                            <td> : </td>
                            <td>@Model.StartTime</td>
                        </tr>
                        <tr>
                            <th>End Time</th>
                            <td> : </td>
                            <td>@Model.EndTime</td>
                        </tr>
                        <tr>
                            <th>Teaching Days</th>
                            <td> : </td>
                            <td>@Model.TeachingDays</td>
                        </tr>
                        <tr>
                            <th>Teacher</th>
                            <td> : </td>
                            <td>@Model.Teacher</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <form asp-action="Enroll" asp-controller="booking" method="post" asp-antiforgery="true">
                    <input name="scheduleId" value="@Model.ScheduleId" hidden required>
                    <input name="returnUlr" value="@Model.ReturnURL" hidden>
                    <div class="col-12 text-right">
                        <a class="btn btn-outline-warning rounded" href="@Model.ReturnURL"> Cencel </a>
                        <input type="submit" value=" Confirm " class="btn btn-outline-success rounded">
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="card-body text-center">
                <span class="text-danger bg-gradient-yellow p-2"> No Schedule Found. Please Select a Valid Subject.</span>
            </div>
        }
    </div>
</div>