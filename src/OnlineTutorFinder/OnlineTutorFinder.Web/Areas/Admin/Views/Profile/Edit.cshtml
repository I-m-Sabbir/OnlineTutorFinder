@model OnlineTutorFinder.Web.Areas.Admin.Models.ProfileModel
@{
    ViewData["Title"] = "Update Profile";
}

@if (Model != null)
{
    <div class="container">
        <form asp-action="Edit" asp-antiforgery="true" method="post" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header"><h3>Update Profile</h3></div>
                <div class="card-body">

                    <div class="row">

                        <div class="col-xl-6 col-md-6 col-sm-12">
                            @if (Model.PictureUrl != null)
                            {
                                <img id="picture" src="@Model.PictureUrl" class="img-thumbnail" style="width:100%" />
                            }
                            else
                            {
                                <img id="picture" src="~/Images/ProfilePictures/no-image.png" class="img-thumbnail" style="width:100%" />
                            }
                            <hr />
                            <input type="file" id="uploadFile" asp-for="Picture" />
                            <br />
                            <span class="text-danger" asp-validation-for="Picture"></span>
                        </div>

                        <div class="col-xl-6 col-md-6 col-sm-12">

                            <div class="form-group row">
                                <label class="col-xl-3 col-md-3 col-sm-12" asp-for="FirstName"></label>
                                <div class="col-xl-9 col-md-9 col-sm-12">
                                    <input asp-for="FirstName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-md-3 col-sm-12" asp-for="LastName"></label>
                                <div class="col-xl-9 col-md-9 col-sm-12">
                                    <input asp-for="LastName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-md-3 col-sm-12" asp-for="Email"></label>
                                <div class="col-xl-9 col-md-9 col-sm-12">
                                    <p>@Model.Email</p>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-md-3 col-sm-12" asp-for="Address"></label>
                                <div class="col-xl-9 col-md-9 col-sm-12">
                                    <textarea asp-for="Address" class="form-control"></textarea>
                                    <span class="text-danger" asp-validation-for="Address"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-md-3 col-sm-12" asp-for="Gender"></label>
                                <div class="col-xl-9 col-md-9 col-sm-12">
                                   <select asp-for="Gender" class="form-control">
                                        <option selected disabled>Please Chose an Option</option>
                                       <option>Male</option>
                                       <option>Female</option>
                                       <option>Other</option>
                                   </select>
                                </div>
                            </div>



                        </div>

                    </div>

                </div>
                <div class="card-footer text-center">
                    <input type="submit" value="Update" class="btn btn-md btn-outline-success rounded" />
                </div>
            </div>
        </form>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        uploadFile.onchange = evt => {
            const [file] = uploadFile.files
            if (file) {
                picture.src = URL.createObjectURL(file)
            }
        }
    </script>
}